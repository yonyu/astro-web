import Layout from "../../layouts/Layout.astro";

const posts = await Astro.glob('./*.md')
---

<Layout pageTitle="Posts">
    <h1>Posts</h1>
    <section>
        {posts.map((post) => (
            <p>
                <a href={post.url}>{post.frontmatter.title}</a>
            </p>
        ))}
    </section>
</Layout>
