---
// script section or code fence
const pageTitle = "Astro";

const pages = ["Home", "Blog", "About us", "Contact us"];

// hard coded data User object but we could retrieve a user session from
// our authentication provider, decode a JWT token, or read cookies.
const currentUser = {
  name: "John Doe",
  isAdmin: true,
};
---

<!-- template section -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <h1>Astro</h1>

    {pages.map((page) => <li>{page}</li>)}
    <p>Welcome {currentUser.name}</p>
    {
      currentUser.isAdmin && (
        <section class="admin-panel">
          <h3>Admin control panel</h3>
          <p>Admin functionality goes here</p>
        </section>
      )
    }
  </body>
</html>

<style is:global>
  .admin-panel {
    border: 2px solid #800000;
    padding: 1rem;
  }
</style>