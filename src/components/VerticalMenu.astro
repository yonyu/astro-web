---
interface Props {
    options: Array<{
        label: string,
        url: string,
    }>;
    activeOptionUrl: string;
    activeBackgroundColor?: string;
}

const { options, activeOptionUrl, activeBackgroundColor="#800000"} = Astro.props;

const activeMenuOptionColor = '#faf9f6';
---

<ul class="menu">
    {
        options.map(({label, url}) => (
            <li>
                <a class:list={['menu-item', { active: url === activeOptionUrl }]} href={`/${url}`}>{label}</a>
            </li>
        ))
    }
</ul>

<style define:vars={{activeMenuOptionColor, activeBackgroundColor}}>
    .menu {
        list-style-type: none;
        display: flex;
        flex-direction: column;

        .menu-item {
            display: block;
            text-decoration: none;
            font-size: 1.25rem;
            padding: 0.75rem 1rem;
            color: var(--brand-primary);

            &.active {
                background-color: var(--activeBackgroundColor);
                color: var(--activeMenuOptionColor);
            }
        }
    }
</style>
